<%- include('partials/navbar') %>

<section id="hero" class="hero">
  <div class="container hero-grid">
    <div class="hero-copy">
      <h1>Comunidad Aneley Montessori</h1>
      <p class="lead">
        Ambientes preparados, autonomía y respeto por los ritmos de la infancia.
        Educación con propósito en vínculo con la naturaleza y la comunidad.
      </p>
      <div class="hero-cta">
        <a href="#admision" class="btn btn--primary">Postula aquí</a>
        <a
          href="https://instagram.com/aneleymontessori"
          target="_blank"
          class="btn btn--ghost"
          >Instagram</a
        >
      </div>
    </div>
    <figure class="hero-image">
      <img src="/img/hero.png" alt="Aneley Montessori" />
    </figure>
  </div>
</section>

<section id="nosotros" class="section">
  <div class="container">
    <h2>Nosotros</h2>
    <p>
      Somos una comunidad educativa Montessori con foco en autonomía, respeto y
      naturaleza.
      <br />
      <strong>Visión:</strong> Ser un referente Montessori con enfoque en
      comunidad, naturaleza y autonomía.
      <br />
      <strong>Misión:</strong> Potenciar el desarrollo integral de niñas y niños
      en un ambiente preparado y respetuoso.
    </p>

    <div class="hero-cta" style="margin-top: 10px">
      <a class="btn btn--outline" target="_blank" href="#"
        >Reglamento Interno</a
      >
      <a class="btn btn--outline" target="_blank" href="#"
        >Proyecto Educativo</a
      >
    </div>
  </div>
</section>

<section id="sede" class="section section--alt">
  <div class="container">
    <h2>Jardín Infantil</h2>
    <div class="cards">
      <% niveles.forEach(function(n){ if(n.nombre==='Comunidad Infantil' ||
      n.nombre==='Casa de Niños'){ %>
      <article class="card">
        <h3><%= n.nombre %></h3>
        <ul class="meta">
          <li><strong>Edades:</strong> <%= n.edades %></li>
          <li><strong>Cupos:</strong> <%= n.cupos %></li>
          <li><strong>Guías:</strong> <%= n.guias.join(', ') %></li>
        </ul>
      </article>
      <% } }); %>
    </div>
    <h2>Escuela Libre</h2>
    <div class="cards">
      <% niveles.forEach(function(n){ if(n.nombre.indexOf('Taller')===0){ %>
      <article class="card">
        <h3><%= n.nombre %></h3>
        <ul class="meta">
          <li><strong>Edades:</strong> <%= n.edades %></li>
          <li><strong>Cupos:</strong> <%= n.cupos %></li>
          <li><strong>Guías:</strong> <%= n.guias.join(', ') %></li>
        </ul>
      </article>
      <% } }); %>
    </div>
  </div>
</section>

<section id="admision" class="section section--accent">
  <div class="container admision">
    <div class="admision-copy">
      <h2>Admisión 2026</h2>
      <p>Revisa el protocolo y completa el formulario de postulación.</p>
      <div class="hero-cta">
        <a class="btn btn--outline" target="_blank" href="#"
          >Protocolo de admisión</a
        >
        <a class="btn btn--primary" target="_blank" href="#"
          >Formulario de postulación</a
        >
      </div>
    </div>
    <div class="admision-badge">Nuevo Proceso</div>
  </div>
</section>

<section id="noticias" class="section">
  <div class="container">
    <div class="section-head">
      <h2>Noticias</h2>
      <a class="link" href="#">Ver todas →</a>
    </div>

    <div class="news">
      <% noticias.forEach(function(n){ %>
      <article class="news-card">
        <figure><img src="<%= n.img %>" alt="<%= n.titulo %>" /></figure>
        <div class="news-body">
          <span class="news-date"><%= n.fecha %></span>
          <h3><%= n.titulo %></h3>
          <p><%= n.resumen %></p>
          <a href="<%= n.url %>" class="link">Leer más</a>
        </div>
      </article>
      <% }); %>
    </div>
  </div>
</section>

